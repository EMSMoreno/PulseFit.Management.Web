@model IEnumerable<PulseFit.Management.Web.Data.Entities.PersonalTrainer>

@{
    ViewData["Title"] = "Personal Trainers";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Personal Trainer</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Specialty</th>
            <th>Certification</th>
            <th>Hire Date</th>
            <th>Status</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainer in Model)
        {
            <tr>
                <td>@trainer.Specialty</td>
                <td>@trainer.Certification</td>
                <td>@trainer.HireDate.ToShortDateString()</td>
                <td>@trainer.Status</td>
                <td>@trainer.User.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@trainer.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@trainer.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@trainer.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
