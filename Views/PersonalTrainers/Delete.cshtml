@model PulseFit.Management.Web.Models.PersonalTrainerViewModel

@{
    ViewData["Title"] = "Delete Personal Trainer";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this Personal Trainer?</h4>
<div>
    <h4>@Model.Specialty</h4>
    <dl class="row">
        <dt class="col-sm-2">Certification</dt>
        <dd class="col-sm-10">@Model.Certification</dd>

        <dt class="col-sm-2">Hire Date</dt>
        <dd class="col-sm-10">@Model.HireDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Profile Picture</dt>
        <dd class="col-sm-10">
            <img src="@Model.ProfilePictureUrl" alt="Profile Picture" style="width: 100px; height: auto;" />
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
