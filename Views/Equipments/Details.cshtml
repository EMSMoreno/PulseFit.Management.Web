@model PulseFit.Management.Web.Data.Entities.Equipment

@{
    ViewData["Title"] = "Create Equipment";
}

<div class="container mt-4">
    <h2>Equipment Details</h2>

    <div class="card shadow-lg p-4">
        <div class="row align-items-center mb-4">
            <div class="col-md-4 d-flex justify-content-center">
                <img src="@Model.EquipmentImageUrl" alt="Equipment Picture" class="rounded shadow-sm" style="width: 180px; height: 180px;" />
            </div>
            <div class="col-md-8">
                <h3 class="text-primary">@Model.Name</h3>
                <hr class="my-3" />
                <dl class="row">
                    <dt class="col-sm-4 fw-semibold text-muted">Quantity:</dt>
                    <dd class="col-sm-8">@Model.Quantity</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Status:</dt>
                    <dd class="col-sm-8">@Model.Status</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Type:</dt>
                    <dd class="col-sm-8">@Model.Type</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Gym:</dt>
                    <dd class="col-sm-8">@Model.GymName</dd>
                </dl>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger me-2">Delete</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>