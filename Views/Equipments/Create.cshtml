@model PulseFit.Management.Web.Models.EquimentViewModel

@{
    ViewData["Title"] = "Create Equipment";
}

<h2>Create Equipment</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}


<hr />
<form id="createEquipmentForm" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Quantity" class="form-label">Quantity <span class="text-danger">*</span></label>
            <input asp-for="Quantity" class="form-control" required />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Status" class="form-label">Status</label>
            <select asp-for="Status" class="form-control" asp-items="ViewBag.Status">
                <option value="">Select the Status ...</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Type" class="form-label">Equipment Type</label>
            <select asp-for="Type" class="form-control" asp-items="ViewBag.Type">
                <option value="">Select the Type ...</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="GymId" class="form-label">Gym</label>
            <select asp-for="GymId" class="form-control" asp-items="ViewBag.Gyms">
                <option value="">Select a Gym ...</option>
            </select>
            <span asp-validation-for="GymId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="EquipmentImageFile" class="form-label">Equipment Picture</label>
            <input asp-for="EquipmentImageFile" type="file" class="form-control" id="workoutPictureUpload" />
            <small class="form-text text-muted">Maximum file size: 2 MB</small> <!-- Indicação do tamanho máximo -->
            <span asp-validation-for="EquipmentImageFile" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Create Equipment</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/formHelpers.js"></script>

    <script>
        setupSweetAlertOnSubmit("createEquipmentForm", "Equipment added successfully.", "Please correct the errors in the form.");
    </script>
}