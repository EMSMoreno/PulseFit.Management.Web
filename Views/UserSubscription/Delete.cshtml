@model PulseFit.Management.Web.Models.UserSubscriptionViewModel

@{
    ViewData["Title"] = "Delete Subscription";
}

<h2>Are you sure you want to delete this subscription?</h2>

<div class="card mt-4 shadow-sm">
    <img src="@Model.Subscription.ImageUrl" class="card-img-top" alt="@Model.Subscription.Name" style="max-height: 200px; object-fit: cover;" />
    <div class="card-body">
        <h5 class="card-title">@Model.Subscription.Name</h5>
        <p class="card-text">@Model.Subscription.Description</p>
        <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
        <p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
        <p><strong>Status:</strong> @Model.Status</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Details" asp-route-clientId="@Model.ClientId" class="btn btn-secondary">Cancel</a>
    </div>
</form>
