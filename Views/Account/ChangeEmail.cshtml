@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card-neon p-4 text-center" style="max-width: 500px; width: 100%;">
        <!-- Neon-styled title -->
        <h2 class="title-neon mb-4">@ViewData["Title"]</h2>

        <!-- Confirmation Message -->
        <p class="text-neon-blue">
            Thank you for confirming your email. Now you can log in to the system.
        </p>

        <!-- Login Button -->
        <a asp-action="Login" class="btn btn-neon-pink neon-hover-shadow mt-3">Go to Login</a>
    </div>
</div>
