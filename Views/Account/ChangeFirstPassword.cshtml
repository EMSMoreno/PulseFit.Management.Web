@model PulseFit.Management.Web.Models.ChangeFirstPasswordViewModel
@{
    ViewData["Title"] = "Change Your Password";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card-neon p-4" style="max-width: 500px; width: 100%;">
        <!-- Centralized card with neon-styled title -->
        <h2 class="title-neon mb-4">@ViewData["Title"]</h2>

        <form asp-action="ChangeFirstPassword" method="post">
            <!-- Validation Summary -->
            <div asp-validation-summary="All" class="text-warning mb-3"></div>

            <!-- Hidden fields for email and token -->
            <input asp-for="Email" type="hidden" />
            <input asp-for="Token" type="hidden" />

            <!-- Temporary Password Field -->
            <div class="form-group mb-3">
                <label asp-for="TemporaryPassword" class="text-neon-pink">Temporary Password</label>
                <input asp-for="TemporaryPassword" type="password" class="form-control input-neon" />
                <span asp-validation-for="TemporaryPassword" class="text-warning"></span>
            </div>

            <!-- New Password Field -->
            <div class="form-group mb-3">
                <label asp-for="NewPassword" class="text-neon-pink">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control input-neon" />
                <span asp-validation-for="NewPassword" class="text-warning"></span>
            </div>

            <!-- Confirm New Password Field -->
            <div class="form-group mb-4">
                <label asp-for="ConfirmNewPassword" class="text-neon-pink">Confirm New Password</label>
                <input asp-for="ConfirmNewPassword" type="password" class="form-control input-neon" />
                <span asp-validation-for="ConfirmNewPassword" class="text-warning"></span>
            </div>

            <!-- Submit Button -->
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-neon-pink neon-hover-shadow">Change Password</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
