@model PulseFit.Management.Web.Models.ChangeUserViewModel

@{
    ViewData["Title"] = "Change User";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card-neon p-4" style="max-width: 500px; width: 100%;">
        <!-- Centralized card with neon-styled title -->
        <h2 class="title-neon text-center mb-4">@ViewData["Title"]</h2>

        <form method="post">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-warning mb-3"></div>

            <!-- First Name Field -->
            <div class="form-group mb-3">
                <label asp-for="FirstName" class="text-neon-pink">First Name</label>
                <input asp-for="FirstName" class="form-control input-neon" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>

            <!-- Last Name Field -->
            <div class="form-group mb-3">
                <label asp-for="LastName" class="text-neon-pink">Last Name</label>
                <input asp-for="LastName" class="form-control input-neon" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>

            <!-- Address Field -->
            <div class="form-group mb-3">
                <label asp-for="Address" class="text-neon-pink">Address</label>
                <input asp-for="Address" class="form-control input-neon" />
                <span asp-validation-for="Address" class="text-warning"></span>
            </div>

            <!-- Phone Number Field -->
            <div class="form-group mb-4">
                <label asp-for="PhoneNumber" class="text-neon-pink">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control input-neon" />
                <span asp-validation-for="PhoneNumber" class="text-warning"></span>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-3">
                <button type="submit" class="btn btn-neon-pink neon-hover-shadow">Update</button>
                <a asp-action="ChangePassword" class="btn btn-neon-blue neon-hover-shadow">Change Password</a>
            </div>


            <div class="text-success mt-3 text-center">@ViewBag.UserMessage</div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
