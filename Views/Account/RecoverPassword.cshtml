@model PulseFit.Management.Web.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "Recover Password";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card-neon p-5" style="max-width: 400px; width: 100%;">
        <!-- Neon-styled title -->
        <h2 class="title-neon text-center mb-4">@ViewData["Title"]</h2>

        <form method="post">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-warning mb-3"></div>

            <!-- Email Field -->
            <div class="form-group mb-4">
                <label asp-for="Email" class="text-neon-pink">Email</label>
                <input asp-for="Email" class="form-control input-neon" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex flex-column gap-2">
                <button type="submit" class="btn btn-neon-blue w-100 mb-2">Recover Password</button>
                <a asp-action="Login" class="btn btn-neon-pink w-100">Back to Login</a>
            </div>
        </form>

        <!-- Success Message -->
        <div class="text-success mt-3 text-center">
            <p>@ViewBag.Message</p>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}