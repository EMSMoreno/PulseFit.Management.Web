@model PulseFit.Management.Web.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card-neon p-4" style="max-width: 500px; width: 100%;">
        <!-- Centralized card with neon-styled title -->
        <h2 class="title-neon mb-4">@ViewData["Title"]</h2>

        <form method="post">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-warning mb-3"></div>

            <!-- Old Password Field -->
            <div class="form-group mb-3">
                <label asp-for="OldPassword" class="text-neon-pink">Current Password</label>
                <input asp-for="OldPassword" type="password" class="form-control input-neon" />
                <span asp-validation-for="OldPassword" class="text-warning"></span>
            </div>

            <!-- New Password Field -->
            <div class="form-group mb-3">
                <label asp-for="NewPassword" class="text-neon-pink">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control input-neon" />
                <span asp-validation-for="NewPassword" class="text-warning"></span>
            </div>

            <!-- Confirm Password Field -->
            <div class="form-group mb-4">
                <label asp-for="Confirm" class="text-neon-pink">Confirm New Password</label>
                <input asp-for="Confirm" type="password" class="form-control input-neon" />
                <span asp-validation-for="Confirm" class="text-warning"></span>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-3">
                <button type="submit" class="btn btn-neon-pink neon-hover-shadow">Change Password</button>
                <a asp-action="ChangeUser" class="btn btn-neon-blue neon-hover-shadow">Back to User</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
