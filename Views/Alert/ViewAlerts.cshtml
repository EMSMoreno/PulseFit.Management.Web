@{
    Layout = "_Dashboard";
    ViewBag.PageTitle = "Alerts";
    ViewBag.SubPageTitle = "YourAlerts";
}

@model IEnumerable<PulseFit.Management.Web.Data.Entities.Alert>

<h2>Your Alerts</h2>

<table class="table">
    <thead>
        <tr>
            <th>Message</th>
            <th>Created At</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alert in Model)
        {
            <tr>
                <td>@alert.Message</td>
                <td>@alert.CreatedAt</td>
                <td>@(alert.IsResolved ? "Resolved" : "Unresolved")</td>
            </tr>
        }
    </tbody>
</table>
