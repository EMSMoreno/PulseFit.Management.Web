@model PulseFit.Management.Web.Data.Entities.OnlineClass

@{
    Layout = "_Dashboard";
    ViewBag.PageTitle = "Online Class";
    ViewBag.SubPageTitle = "Details";
}

<div class="container mt-5">
    <h2 class="title-neon mb-4">Online Class Details</h2>

    <div class="card-neon p-4">
        <div class="row align-items-center mb-4">
            <div class="col-md-4 d-flex justify-content-center">
                @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                {
                    <img src="@Model.ThumbnailUrl" alt="Class Thumbnail" class="rounded shadow-sm"
                         style="width: 180px; height: 180px; border: 3px solid var(--neon-pink); border-radius: 15px;" />
                }
                else
                {
                    <div class="text-center text-muted" style="width: 180px; height: 180px; display: flex; align-items: center; justify-content: center; border: 3px solid var(--neon-pink); border-radius: 15px;">
                        <span>No Thumbnail</span>
                    </div>
                }
            </div>
            <div class="col-md-8">
                <h3 class="text-neon-blue">@Model.Title</h3>
                <hr class="my-3 neon-divider" />
                <dl class="row">
                    <dt class="col-sm-4 text-neon-green">Category:</dt>
                    <dd class="col-sm-8">@Model.Category</dd>

                    <dt class="col-sm-4 text-neon-green">Video URL:</dt>
                    <dd class="col-sm-8">
                        <a href="@Model.VideoUrl" target="_blank" class="neon-hover">@Model.VideoUrl</a>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-neon-blue neon-hover-shadow me-2">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-neon-pink neon-hover-shadow me-2">Delete</a>
            <a asp-action="ManageOnlineClasses" class="btn btn-neon-secondary neon-hover-shadow">Back to List</a>
        </div>
    </div>
</div>

<style>
    /* Card Styles */
    .card-neon {
        background-color: var(--light-bg);
        border: 1px solid var(--neon-pink);
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card-neon:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border-color: var(--neon-blue);
        }

    /* Divider */
    .neon-divider {
        border-top: 2px solid var(--neon-blue);
    }

    /* Details Section */
    dl.row dt {
        font-weight: 600;
        color: var(--neon-green);
    }

    dl.row dd {
        font-weight: 400;
        color: var(--light-text);
    }

    /* Title */
    h3.text-neon-blue {
        font-size: 1.75rem;
        font-weight: bold;
    }

    /* Link Hover */
    a.neon-hover {
        color: var(--neon-pink);
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a.neon-hover:hover {
            color: var(--neon-blue);
            text-decoration: underline;
        }
</style>

