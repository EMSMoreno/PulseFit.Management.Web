@model IEnumerable<PulseFit.Management.Web.Models.NutritionistViewModel>
@using Newtonsoft.Json

@{
    ViewData["Title"] = "Nutritionist List";
    var jsonSerializerSettings = new JsonSerializerSettings
            {
                ReferenceLoopHandling = ReferenceLoopHandling.Ignore,
                Formatting = Formatting.Indented
            };
    var serializedData = JsonConvert.SerializeObject(Model, jsonSerializerSettings);
}

<h2>Nutritionist List</h2>

<div>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Nutritionist</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No nutritionists found.</div>
}
else
{
    <div id="Grid"></div>
}

@section Scripts {
    <script id="profilePictureTemplate" type="text/x-template">
        <img src="${ProfilePictureUrl}" alt="Profile Picture" style="width: 50px; height: 50px; border-radius: 50%;" />
    </script>

    <script id="actionTemplate" type="text/x-template">
        <a href="/Nutritionists/Edit/${Id}" class="btn btn-warning me-2">Edit</a>
        <a href="/Nutritionists/Delete/${Id}" class="btn btn-danger me-2">Delete</a>
        <a href="/Nutritionists/Details/${Id}" class="btn btn-primary">Details</a>
    </script>

    <script>
        $(document).ready(function () {
            var serializedData = @Html.Raw(serializedData);

            // Mapeamento de Status para exibição
            serializedData.forEach(function (nutritionist) {
                switch (nutritionist.Status) {
                    case 0:
                        nutritionist.StatusText = "Pending";
                        break;
                    case 1:
                        nutritionist.StatusText = "Active";
                        break;
                    case 2:
                        nutritionist.StatusText = "Inactive";
                        break;
                }
            });

            // Configuração do Grid
            var grid = new ej.grids.Grid({
                dataSource: serializedData,
                allowPaging: true,
                allowSorting: true,
                allowFiltering: true,
                pageSettings: { pageSize: 10 },
                toolbar: ['Search'],
                columns: [
                    { field: "ProfilePictureUrl", headerText: "Profile Picture", width: 100, template: "#profilePictureTemplate" },
                    { field: "FirstName", headerText: "First Name", width: 120 },
                    { field: "LastName", headerText: "Last Name", width: 120 },
                    { field: "ExperienceYears", headerText: "Years of Experience", width: 150 },
                    { field: "StatusText", headerText: "Status", width: 100 },
                    { headerText: "Actions", width: 180, template: "#actionTemplate" }
                ]
            });
            grid.appendTo("#Grid");
        });
    </script>
}
