@{
    Layout = "_Dashboard";
    ViewBag.PageTitle = "Nutritionist";
    ViewBag.SubPageTitle = "Details";
}

@model PulseFit.Management.Web.Models.NutritionistViewModel

@{
    ViewData["Title"] = "Nutritionist Details";
}

<div class="container mt-5">
    <h2 class="title-neon mb-4">Nutritionist Details</h2>

    <div class="card-neon p-4">
        <div class="row align-items-center mb-4">
            <div class="col-md-4 d-flex justify-content-center">
                <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle shadow-sm"
                     style="width: 180px; height: 180px; border: 3px solid var(--neon-green);" />
            </div>
            <div class="col-md-8">
                <h3 class="text-neon-blue">@Model.FirstName @Model.LastName</h3>
                <hr class="my-3 neon-divider" />
                <dl class="row">
                    <dt class="col-sm-4 text-neon-pink">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4 text-neon-pink">Phone:</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4 text-neon-pink">Experience:</dt>
                    <dd class="col-sm-8">@Model.ExperienceYears years</dd>

                    <dt class="col-sm-4 text-neon-pink">Status:</dt>
                    <dd class="col-sm-8">@Model.Status</dd>
                </dl>
            </div>
        </div>

        <div class="mb-4">
            <h4 class="text-neon-pink">Specializations</h4>
            <hr class="neon-divider" />
            @if (Model.Specializations.Any())
            {
                <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 g-3">
                    @foreach (var specialization in Model.Specializations)
                    {
                        <div class="col">
                            <div class="card specialty-card h-100 p-3 border-0 shadow-sm"
                                 style="background-color: var(--light-bg); border: 1px solid var(--neon-blue);">
                                <div class="card-img-wrapper d-flex align-items-center justify-content-center"
                                     style="height: 140px;">
                                    <img src="@specialization.ImageUrl" class="card-img-top"
                                         alt="@specialization.Text" style="max-height: 100%; width: auto; object-fit: contain;" />
                                </div>
                                <div class="card-body text-center">
                                    <p class="card-title text-neon-blue mb-0">@specialization.Text</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No specializations assigned</p>
            }
        </div>

        <div class="d-flex justify-content-end mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-neon-blue neon-hover-shadow me-2">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-neon-pink neon-hover-shadow me-2">Delete</a>
            <a asp-action="Index" class="btn btn-neon-secondary neon-hover-shadow">Back to List</a>
        </div>
    </div>
</div>

<style>
    /* Card Styles */
    .card-neon {
        background-color: var(--light-bg);
        border: 1px solid var(--neon-green);
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card-neon:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border-color: var(--neon-blue);
        }

    /* Divider */
    .neon-divider {
        border-top: 2px solid var(--neon-blue);
    }

    /* Details Section */
    dl.row dt {
        font-weight: 600;
        color: var(--neon-pink);
    }

    dl.row dd {
        font-weight: 400;
        color: var(--light-text);
    }

    /* Title */
    h3.text-neon-blue {
        font-size: 1.75rem;
        font-weight: bold;
    }

    /* Specialty Cards */
    .specialty-card:hover {
        transform: scale(1.02);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }

    /* Neon Header for Specializations */
    h4.text-neon-pink {
        font-size: 1.5rem;
        font-weight: bold;
    }
</style>
