@model IEnumerable<PulseFit.Management.Web.Models.SubscriptionViewModel>
@{
    ViewData["Title"] = "Subscriptions";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Available Subscriptions</h2>

    @if (User.IsInRole("Admin"))
    {
        <div class="text-end mb-3">
            <a asp-action="Create" class="btn btn-success btn-lg">Create New Subscription</a>
        </div>
    }

    <div class="filter-bar mb-4 p-3 bg-light rounded shadow-sm">
        <label for="gymFilter" class="form-label font-weight-bold">Select Gym:</label>
        <select id="gymFilter" class="form-select" onchange="filterSubscriptions()">
            <option value="0">All Gyms</option>
            @foreach (var gym in ViewBag.GymOptions as SelectList)
            {
                <option value="@gym.Value">@gym.Text</option>
            }
        </select>
    </div>

    <div id="subscriptionList" class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var subscription in Model)
        {
            <div class="col">
                <div class="card subscription-card shadow border-0">
                    <img src="@subscription.ImageUrl" class="card-img-top rounded-top" alt="Subscription Image">
                    <div class="card-body">
                        <h5 class="card-title">@subscription.Name</h5>
                        <p class="card-text">@subscription.Description</p>

                        @if (subscription.DiscountPercentage > 0)
                        {
                            <p class="price h5 text-primary">
                                <span class="original-price">$@subscription.Price.ToString("C2")</span>
                                <span class="discounted-price">$@subscription.CalculatedPrice.ToString("C2")</span>
                            </p>
                            <p class="discount text-success">Discount: @subscription.DiscountPercentage%</p>
                        }
                        else
                        {
                            <p class="price h5 text-primary">$@subscription.Price.ToString("C2")</p>
                        }

                        <a href="@Url.Action("Details", new { id = subscription.Id })" class="btn btn-primary w-100 mb-2">View Details</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="d-flex justify-content-around mt-3">
                                <a asp-action="Edit" asp-route-id="@subscription.Id" class="btn btn-warning btn-sm px-3">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@subscription.Id" class="btn btn-danger btn-sm px-3">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function filterSubscriptions() {
        var gymId = document.getElementById('gymFilter').value;
        window.location.href = `?gymId=${gymId}`;
    }
</script>

<style>
    .subscription-card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .subscription-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .price {
        font-size: 1.4rem;
        font-weight: bold;
        color: #007bff;
    }

    .original-price {
        text-decoration: line-through;
        color: #888;
        margin-right: 0.5rem;
    }

    .discounted-price {
        color: #e74c3c;
        font-weight: bold;
    }

    .discount {
        color: #27ae60;
        font-size: 0.9em;
    }
</style>
