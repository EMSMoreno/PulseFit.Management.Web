@model PulseFit.Management.Web.Models.SubscriptionViewModel

@{
    ViewData["Title"] = "Delete Subscription";
}

<h2>Are you sure you want to delete this subscription?</h2>

<div class="card mt-4 shadow-sm">
    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="max-height: 200px; object-fit: cover;" />
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p class="card-text"><strong>Duration:</strong> @Model.DurationMonths months</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
