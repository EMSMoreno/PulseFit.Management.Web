@model PulseFit.Management.Web.Models.SubscriptionViewModel
@{
    ViewData["Title"] = "Delete Subscription";
}

<div class="container my-5">
    <div class="alert alert-neon text-center p-4">
        <h4 class="text-neon-danger">Are you sure you want to delete this subscription?</h4>
        <p class="text-gray">This action cannot be undone.</p>
        <p class="title-neon"><strong>@Model.Name</strong></p>
    </div>
    <div class="text-center">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn-neon-danger btn-lg me-2">Delete</button>
        </form>
        <a asp-action="Index" class="btn-neon-secondary btn-lg">Cancel</a>
    </div>
</div>

<style>
    .alert-neon {
        background-color: var(--dark-bg);
        border: 2px solid var(--neon-yellow);
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(255, 255, 0, 0.3);
    }

    .text-neon-danger {
        color: var(--neon-pink);
        font-weight: bold;
        text-transform: uppercase;
    }

    .btn-neon-danger {
        background-color: var(--neon-pink);
        border-color: var(--neon-pink);
        color: var(--btn-text-pink);
        transition: all 0.3s ease;
    }

        .btn-neon-danger:hover {
            background-color: var(--dark-bg);
            color: var(--neon-pink);
            box-shadow: 0px 0px 10px var(--neon-pink);
        }

    .btn-neon-secondary {
        background-color: var(--neon-blue);
        border-color: var(--neon-blue);
        color: var(--btn-text-blue);
        transition: all 0.3s ease;
    }

        .btn-neon-secondary:hover {
            background-color: var(--dark-bg);
            color: var(--neon-blue);
            box-shadow: 0px 0px 10px var(--neon-blue);
        }
</style>
