@model PulseFit.Management.Web.Models.SubscriptionViewModel
@using PulseFit.Management.Web.Data.Entities

@{
    ViewData["Title"] = "Create Subscription";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-neon">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="container my-5">
    <h2 class="title-neon text-center mb-4">Create Subscription</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="card-neon p-4 needs-validation" novalidate>
        <div class="row">
            <!-- Primeira Coluna -->
            <div class="col-md-6">
                <!-- Nome -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label text-neon">Name</label>
                    <input asp-for="Name" class="form-control input-neon" required>
                </div>

                <!-- Descrição -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label text-neon">Description</label>
                    <textarea asp-for="Description" class="form-control input-neon" rows="4"></textarea>
                </div>

                <!-- Preço -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label text-neon">Price</label>
                    <input asp-for="Price" class="form-control input-neon" required>
                </div>

                <!-- Imagem -->
                <div class="mb-3">
                    <label asp-for="SubscriptionImageFile" class="form-label text-neon">Image</label>
                    <input asp-for="SubscriptionImageFile" type="file" class="form-control input-neon">
                </div>

                <!-- Tipo de Assinatura -->
                <div class="mb-3">
                    <label asp-for="SubscriptionType" class="form-label text-neon">Subscription Type</label>
                    <select asp-for="SubscriptionType" class="form-select input-neon" asp-items="Html.GetEnumSelectList<SubscriptionType>()"></select>
                </div>

                <!-- Exclusividade -->
                <div class="form-check form-switch mb-3">
                    <input asp-for="IsExclusive" class="form-check-input">
                    <label asp-for="IsExclusive" class="form-check-label text-neon">Exclusive Subscription</label>
                </div>

                <!-- Duração -->
                <div class="mb-3">
                    <label asp-for="DurationValue" class="form-label text-neon">Duration Value</label>
                    <input asp-for="DurationValue" class="form-control input-neon" required>
                </div>

                <div class="mb-3">
                    <label asp-for="DurationType" class="form-label text-neon">Duration Type</label>
                    <select asp-for="DurationType" class="form-select input-neon" asp-items="Html.GetEnumSelectList<DurationType>()"></select>
                </div>
            </div>

            <!-- Segunda Coluna -->
            <div class="col-md-6">
                <!-- Benefícios -->
                <div class="mb-3">
                    <label class="form-label text-neon">Included Gyms</label>
                    <select asp-for="SelectedGymIds" asp-items="Model.GymOptions" class="form-select input-neon" multiple></select>
                </div>

                <div class="mb-3">
                    <label class="form-label text-neon">Included Workouts</label>
                    <select asp-for="SelectedWorkoutIds" asp-items="Model.WorkoutOptions" class="form-select input-neon" multiple></select>
                </div>

                <div class="mb-3">
                    <label class="form-label text-neon">Included Nutrition Plans</label>
                    <select asp-for="SelectedNutritionPlanIds" asp-items="Model.NutritionPlanOptions" class="form-select input-neon" multiple></select>
                </div>

                <div class="mb-3">
                    <label class="form-label text-neon">Included Online Classes</label>
                    <select asp-for="SelectedOnlineClassIds" asp-items="Model.OnlineClassOptions" class="form-select input-neon" multiple></select>
                </div>

                <!-- Outras Configurações -->
                <div class="mb-3">
                    <label asp-for="MaxPersonalTrainerSessions" class="form-label text-neon">Max Personal Trainer Sessions</label>
                    <input asp-for="MaxPersonalTrainerSessions" class="form-control input-neon" type="number">
                </div>

                <div class="form-check form-switch mb-3">
                    <input asp-for="Has24HourAccess" class="form-check-input">
                    <label asp-for="Has24HourAccess" class="form-check-label text-neon">24/7 Access</label>
                </div>

                <div class="form-check form-switch mb-3">
                    <input asp-for="HasVIPAccess" class="form-check-input">
                    <label asp-for="HasVIPAccess" class="form-check-label text-neon">VIP Access</label>
                </div>

                <div class="mb-3">
                    <label asp-for="PerformanceReportFrequencyInMonths" class="form-label text-neon">Performance Report Frequency (Months)</label>
                    <input asp-for="PerformanceReportFrequencyInMonths" class="form-control input-neon" type="number">
                </div>

                <div class="mb-3">
                    <label asp-for="DiscountPercentage" class="form-label text-neon">Discount Percentage</label>
                    <input asp-for="DiscountPercentage" class="form-control input-neon" type="number">
                </div>
            </div>
        </div>

        <button type="submit" class="btn-neon-pink btn-lg w-100 mt-4">Create Subscription</button>
    </form>
</div>
