@model PulseFit.Management.Web.Models.SubscriptionViewModel

@{
    ViewData["Title"] = "Add Subscription";
}

<h2>Add New Subscription</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Price" class="form-label">Price ($) <span class="text-danger">*</span></label>
            <input asp-for="Price" class="form-control" type="number" min="0" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="MaxWorkouts" class="form-label">Max Workouts</label>
            <input asp-for="MaxWorkouts" class="form-control" type="number" min="0" required />
            <span asp-validation-for="MaxWorkouts" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="DurationMonths" class="form-label">Duration (Months)</label>
            <input asp-for="DurationMonths" class="form-control" type="number" min="1" required />
            <span asp-validation-for="DurationMonths" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SubscriptionImageFile" class="form-label">Subscription Image</label>
        <input asp-for="SubscriptionImageFile" type="file" class="form-control" accept="image/*" />
        <small class="form-text text-muted">Recommended size: 600x400px.</small>
        <span asp-validation-for="SubscriptionImageFile" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success">Save Subscription</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
