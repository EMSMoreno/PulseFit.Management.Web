@model PulseFit.Management.Web.Data.Entities.Workout

@{
    ViewData["Title"] = "Workout Details";
}

<div class="container mt-4">
    <h2>Workout Details</h2>

    <div class="card shadow-lg p-4">
        <div class="row align-items-center mb-4">
            <div class="col-md-4 d-flex justify-content-center">
                <img src="@Model.WorkoutImageUrl" alt="Workout Image" class="rounded-circle shadow-sm" style="width: 180px; height: 180px;" />
            </div>
            <div class="col-md-8">
                <h3 class="text-primary">@Model.Name | @Model.Popularity</h3>
                <hr class="my-3" />
                <dl class="row">
                    <dt class="col-sm-4 fw-semibold text-muted">Description:</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Difficulty:</dt>
                    <dd class="col-sm-8">@Model.DifficultyLevel</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Start:</dt>
                    <dd class="col-sm-8">@Model.StartDate.ToString("dd/MM HH:mm") (@Model.Duration Min.)</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Bookings:</dt>
                    <dd class="col-sm-8">@Model.Bookings</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Available Spots:</dt>
                    <dd class="col-sm-8">@ViewBag.Spots</dd>

                    
                </dl>
            </div>
        </div>
        <hr />
        <div class="row">
            <!-- Gym Card -->
            <div class="col-md-6">
                <div class="card shadow-sm mb-3" style="max-width: 200px; margin: 0 auto;">
                    <img src="@ViewBag.GymImage" alt="Gym Image" class="card-img-top" style="height: 150px; object-fit: cover;" />
                    <div class="card-body p-2">
                        <h6 class="card-title text-center">@Model.GymName</h6>
                    </div>
                </div>
            </div>

            <!-- Card do Personal Trainer -->
            <div class="col-md-6">
                <div class="card shadow-sm mb-3" style="max-width: 200px; margin: 0 auto;">
                    <img src="@ViewBag.PtProfilePic" alt="Instructor Image" class="card-img-top" style="height: 150px; object-fit: cover;" />
                    <div class="card-body p-2">
                        <h6 class="card-title text-center">@Model.InstructorName</h6>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-3">
            <a asp-action="CreateBooking" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2" id="bookingButton">Reserve</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger me-2">Delete</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>