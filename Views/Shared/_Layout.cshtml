    /* Black Friday */
    .black-friday-modal .modal-dialog {
        max-width: 700px;
    }

    .black-friday-modal .modal-content {
        background-color: var(--dark-bg); /* Dark background */
        border: 4px solid var(--neon-pink); /* Neon border */
        border-radius: 20px;
        padding: 30px;
        position: relative;
    }

    /* Close Button */
    .btn-close-custom {
        position: absolute;
        top: 15px;
        right: 15px;
        font-size: 30px;
        color: var(--light-text);
        background: none;
        border: none;
        cursor: pointer;
    }

    .btn-close-custom:hover {
        color: var(--neon-pink);
    }

    /* Title */
    .black-friday-title {
        font-family: 'Raleway', sans-serif;
        font-weight: 900;
        margin-bottom: 30px;
    }

    .black-text {
        font-size: 4.5rem; /* Larger font for BLACK */
        color: var(--neon-pink);
        text-shadow: 0px 0px 20px var(--neon-pink);
    }

    .friday-text {
        font-size: 4rem; /* Slightly smaller font for FridaY */
        color: var(--neon-blue);
        text-shadow: 0px 0px 20px var(--neon-blue);
    }

    /* Banner */
    .black-friday-banner {
        background: linear-gradient(90deg, var(--neon-pink), var(--neon-blue));
        padding: 15px;
        border-radius: 12px;
        margin-bottom: 30px;
        animation: glow 3s infinite;
    }

    .neon-highlight {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--neon-green);
        text-transform: uppercase;
    }

    .black-friday-percentage {
        font-size: 3rem;
        font-weight: 800;
        color: var(--neon-yellow);
        margin-top: 10px;
    }



    /* Description */
    .black-friday-description {
        font-size: 1.3rem;
        color: var(--light-text);
        margin-bottom: 30px;
    }

    /* Button */
    .black-friday-button {
        padding: 20px 40px;
        font-size: 1.6rem;
        font-weight: bold;
        color: #000; /* Cor do texto preta */
        -webkit-text-fill-color: #000; /* Define a cor do texto preto */
        background: linear-gradient(90deg, var(--neon-pink), var(--neon-blue));
        border: none;
        border-radius: 10px;
        transition: transform 0.3s, box-shadow 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }


    .black-friday-button:hover {
        transform: scale(1.1);
        box-shadow: 0 0 30px var(--neon-pink), 0 0 30px var(--neon-blue);
        color: var(--light-text);
    }
    </style>