<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PulseFit</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oswald:300,400,500,600,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@500;800&family=Montserrat:wght@400;700&family=Roboto:wght@300;500&display=swap" rel="stylesheet">

    <!-- Template CSS Styles -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/flaticon.css" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/css/barfiller.css" />
    <link rel="stylesheet" href="~/css/magnific-popup.css" />
    <link rel="stylesheet" href="~/css/slicknav.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PulseFit.Management.Web.styles.css" asp-append-version="true" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">


    <!-- Ícones do Bootstrap -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">

    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- Syncfusion -->
    <link href="https://cdn.syncfusion.com/ej2/material.css" rel="stylesheet" />
</head>
<body>
    <!-- Preloader -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu -->
    @await Html.PartialAsync("_Offcanvas")

    <!-- Header -->
    <header>
        @await Html.PartialAsync("_Header")
    </header>

    <!-- Main Content -->
    <div class="custom-container">
        <main class="custom-main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        @await Html.PartialAsync("_Footer")
        @await Html.PartialAsync("_Search")
    </footer>

    <!-- Modal -->
    <div id="blackFridaySpecial" class="modal fade black-friday-modal" tabindex="-1" aria-labelledby="blackFridayModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <!-- Close Icon -->
                <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="Close">&times;</button>
                <div class="modal-body text-center">
                    <!-- Title -->
                    <div class="modal-title">
                        <h1 class="black-friday-title">
                            <span class="black-text">BLACK</span><br>
                            <span class="friday-text">FridaY</span>
                        </h1>
                    </div>

                    <!-- Animated Banner -->
                    <div class="black-friday-banner">
                        <p class="neon-highlight">BIGGEST SALE OF THE YEAR</p>
                        <p class="black-friday-percentage">50% OFF</p>
                    </div>

                    <!-- Description -->
                    <p class="black-friday-description">
                        Don’t miss this exclusive offer! Upgrade your fitness journey with <strong>HALF PRICE</strong> subscription. Limited time only!
                    </p>

                    <!-- Button -->
                    <a href="@Url.Action("Index", "Subscription")" class="btn black-friday-button">
                        <i class="fas fa-bolt"></i> Grab the Deal Now!
                    </a>
                </div>
            </div>
        </div>
    </div>




    <!-- Template JS Plugins -->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/masonry.pkgd.min.js"></script>
    <script src="~/js/jquery.barfiller.js"></script>
    <script src="~/js/jquery.slicknav.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Syncfusion -->
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>

    <!-- Ativa os tooltips do Bootstrap -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.forEach(function (tooltipTriggerEl) {
                new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const dropdowns = document.querySelectorAll('.dropdown-toggle');
            dropdowns.forEach(dropdown => {
                new bootstrap.Dropdown(dropdown);
            });
        });

    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const modalId = 'blackFridaySpecial';

            // Check if the modal has already been shown in this session
            const modalShown = sessionStorage.getItem('modalShown');

            if (!modalShown) {
                // Show the modal
                var blackFridayModal = new bootstrap.Modal(document.getElementById(modalId), {
                    backdrop: 'static', // Prevent close on backdrop click
                    keyboard: true // Allow close with ESC
                });
                blackFridayModal.show();

                // Mark the modal as shown
                sessionStorage.setItem('modalShown', 'true');
            }
        });
    </script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

