@if (Model > 0)
{
    <a class="nav-link" href="@Url.Action("UnresolvedAlerts", "Alert")" role="button">
        <i class="fas fa-bell"></i>
        <span class="badge bg-danger">@Model</span>  <!-- Show notification count -->
    </a>
}
else
{
    <a class="nav-link" href="@Url.Action("UnresolvedAlerts", "Alert")" role="button">
        <i class="fas fa-bell"></i>
    </a>
}
