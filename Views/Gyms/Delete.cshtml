@model PulseFit.Management.Web.Data.Entities.Gym

@{
    Layout = "_Dashboard";
    ViewBag.PageTitle = "Gym";
    ViewBag.SubPageTitle = "Delete";
}

<div class="container my-5">
    <h2 class="text-neon-pink text-center mb-4">Delete Gym</h2>

    <div class="card-neon p-4">
        <h4 class="text-center text-danger">Are you sure you want to delete this gym?</h4>
        <p class="text-center">
            This action cannot be undone. You are about to delete <strong>@Model.Name</strong>.
        </p>

        <div class="d-flex justify-content-center mt-4">
            <form id="deleteForm" asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="button" class="btn btn-neon-pink neon-hover-shadow me-3" id="confirmDelete">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-neon-secondary neon-hover-shadow">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/formHelpers.js"></script>
    <script>
        setupSweetAlertOnDelete("confirmDelete", "deleteForm", "This action is irreversible! Are you sure?");
    </script>
}