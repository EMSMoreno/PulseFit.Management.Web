@model PulseFit.Management.Web.Data.Entities.Gym

@{
    ViewData["Title"] = "Gym Details";
}

<div class="container mt-4">
    <h2>Gym Details</h2>

    <div class="card shadow-lg p-4">
        <div class="row align-items-center mb-4">
            <div class="col-md-4 d-flex justify-content-center">
                <img src="@Model.GymImageUrl" alt="Gym Picture" class="rounded shadow-sm" style="width: 180px; height: 180px;" />
            </div>
            <div class="col-md-8">
                <h3 class="text-primary">@Model.Name</h3>
                <hr class="my-3" />
                <dl class="row">
                    <dt class="col-sm-4 fw-semibold text-muted">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Phone:</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Location:</dt>
                    <dd class="col-sm-8">@Model.Location</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Capacity:</dt>
                    <dd class="col-sm-8">@Model.Capacity</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Day Off:</dt>
                    <dd class="col-sm-8">@Model.DayOff</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Opening Time:</dt>
                    <dd class="col-sm-8">@Model.OpeningTime.ToString(@"hh\:mm")</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Closing Time:</dt>
                    <dd class="col-sm-8">@Model.ClosingTime.ToString(@"hh\:mm")</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Creation:</dt>
                    <dd class="col-sm-8">@Model.CreationDate.ToString("dd/MM/yyyy")</dd>
                </dl>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger me-2">Delete</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>