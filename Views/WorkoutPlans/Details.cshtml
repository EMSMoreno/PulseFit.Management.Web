@model PulseFit.Management.Web.Models.WorkoutPlanViewModel

@{
    ViewData["Title"] = "Workout Plan Details";
}


<div class="container mt-4">
    <h2>Nutritionist Details</h2>

    <div class="card shadow-lg p-4">
        <div class="row align-items-center mb-4">
            <div class="col-md-4 d-flex justify-content-center">
                <img src="@Model.WorkoutPlanImageUrl" alt="Workout Picture" class=" shadow-sm" style="width: 180px; height: 180px;" />
            </div>
            <div class="col-md-8">
                <h3 class="text-primary">@Model.Name</h3>
                <hr class="my-3" />
                <dl class="row">
                    <dt class="col-sm-4 fw-semibold text-muted">Description:</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Plan Type:</dt>
                    <dd class="col-sm-8">@Model.WorkoutPlanType</dd>

                    <dt class="col-sm-4 fw-semibold text-muted">Difficulty:</dt>
                    <dd class="col-sm-8">@Model.Difficulty</dd>

                </dl>
            </div>
        </div>

        <div class="mb-4">
            <h4 class="text-secondary">Equipements</h4>
            <hr />
            @if (Model.Equipments.Any())
            {
                <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 g-3">
                    @foreach (var equipment in Model.Equipments)
                    {
                        <div class="col">
                            <div class="card h-100 specialty-card shadow-sm border-0">
                                <div class="card-img-wrapper d-flex align-items-center justify-content-center" style="height: 140px; background-color: #f7f7f7;">
                                    <img src="@equipment.ImageUrl" class="card-img-top" alt="@equipment.Text" style="max-height: 100%; width: auto; object-fit: contain;" />
                                </div>
                                <div class="card-body text-center">
                                    <p class="card-title text-muted mb-0">@equipment.Text</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No Equipments assigned</p>
            }
        </div>

        <div class="d-flex justify-content-end mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger me-2">Delete</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 8px;
        padding: 1.5rem;
    }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .card-img-wrapper {
        padding: 15px;
        border-bottom: 1px solid #ddd;
        border-radius: 8px 8px 0 0;
    }

    h3 {
        color: #007bff;
        font-weight: bold;
    }

    dl.row dt {
        font-weight: 500;
        color: #6c757d;
    }

    dl.row dd {
        font-weight: 400;
        color: #212529;
    }
</style>
