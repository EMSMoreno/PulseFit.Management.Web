@model PulseFit.Management.Web.Models.WorkoutPlanViewModel

@{
    Layout = "_Dashboard";
    ViewBag.PageTitle = "Workout Plan";
    ViewBag.SubPageTitle = "Details";
}

<div class="container mt-5">
    <h2 class="title-neon mb-4">Workout Plan Details</h2>

    <div class="card-neon p-4">
        <div class="row align-items-center mb-4">
            <div class="col-md-4 d-flex justify-content-center">
                @if (!string.IsNullOrEmpty(Model.WorkoutPlanImageUrl))
                {
                    <img src="@Model.WorkoutPlanImageUrl" alt="Workout Plan Image" class="rounded shadow-sm"
                         style="width: 180px; height: 180px; border: 3px solid var(--neon-pink); border-radius: 15px;" />
                }
                else
                {
                    <div class="text-center text-muted" style="width: 180px; height: 180px; display: flex; align-items: center; justify-content: center; border: 3px solid var(--neon-pink); border-radius: 15px;">
                        <span>No Image</span>
                    </div>
                }
            </div>
            <div class="col-md-8">
                <h3 class="text-neon-blue">@Model.Name</h3>
                <hr class="my-3 neon-divider" />
                <dl class="row">
                    <dt class="col-sm-4 text-neon-green">Description:</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4 text-neon-green">Plan Type:</dt>
                    <dd class="col-sm-8">@Model.WorkoutPlanType</dd>

                    <dt class="col-sm-4 text-neon-green">Difficulty:</dt>
                    <dd class="col-sm-8">@Model.Difficulty</dd>
                </dl>
            </div>
        </div>

        <div class="mb-4">
            <h4 class="text-neon-green">Equipments</h4>
            <hr class="neon-divider" />
            @if (Model.Equipments.Any())
            {
                <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 g-3">
                    @foreach (var equipment in Model.Equipments)
                    {
                        <div class="col">
                            <div class="card card-neon border-0">
                                <div class="card-img-wrapper d-flex align-items-center justify-content-center"
                                     style="height: 140px; background-color: var(--light-bg);">
                                    <img src="@equipment.ImageUrl" class="card-img-top"
                                         alt="@equipment.Text" style="max-height: 100%; width: auto; object-fit: contain;" />
                                </div>
                                <div class="card-body text-center">
                                    <p class="card-title text-neon-blue mb-0">@equipment.Text</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No Equipments assigned</p>
            }
        </div>

        <div class="d-flex justify-content-end mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-neon-blue neon-hover-shadow me-2">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-neon-pink neon-hover-shadow me-2">Delete</a>
            <a asp-action="Index" class="btn btn-neon-secondary neon-hover-shadow">Back to List</a>
        </div>
    </div>
</div>

<style>
    /* Card Styles */
    .card-neon {
        background-color: var(--light-bg);
        border: 1px solid var(--neon-pink);
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card-neon:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border-color: var(--neon-blue);
        }

    /* Divider */
    .neon-divider {
        border-top: 2px solid var(--neon-blue);
    }

    /* Details Section */
    dl.row dt {
        font-weight: 600;
        color: var(--neon-green);
    }

    dl.row dd {
        font-weight: 400;
        color: var(--light-text);
    }

    /* Title */
    h3.text-neon-blue {
        font-size: 1.75rem;
        font-weight: bold;
    }

    /* Equipments */
    .card-img-wrapper {
        padding: 15px;
        border-radius: 8px;
    }

    /* Link Hover */
    a.neon-hover {
        color: var(--neon-pink);
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a.neon-hover:hover {
            color: var(--neon-blue);
            text-decoration: underline;
        }
</style>
