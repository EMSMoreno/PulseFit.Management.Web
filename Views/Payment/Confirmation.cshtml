@model PulseFit.Management.Web.Models.ConfirmationViewModel

@{
    ViewData["Title"] = "Payment Confirmation";
}

<div class="container my-5">
    <div class="card-neon p-5 text-center rounded-4">
        <div class="icon-check">
            <i class="bi bi-check-circle-fill text-neon-green"></i>
        </div>

        <h2 class="text-neon-blue mb-3 fw-bold">Payment Successful!</h2>
        <p class="lead">Thank you for your payment. Your subscription is now active.</p>

        <div class="confirmation-details mt-4">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="detail-item">
                        <span class="label">Transaction ID:</span>
                        <span class="value">@Model.TransactionId</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Payment Date:</span>
                        <span class="value">@Model.PaymentDate.ToString("f")</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Subscription:</span>
                        <span class="value">@Model.SubscriptionName</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Amount Paid:</span>
                        <span class="value">@Model.Amount.ToString("C2")</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Expiration Date:</span>
                        <span class="value">@Model.ExpirationDate.ToShortDateString()</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Status:</span>
                        <span class="badge-neon">@Model.Status</span>
                    </div>
                </div>
            </div>
        </div>

        <p class="mt-4">You will receive an email with the subscription details shortly.</p>
        <div class="mt-4">
            @if (User.IsInRole("Client"))
            {
                <a href="@Url.Action("ClientSubscriptions", "UserSubscription")" class="btn btn-neon-blue neon-hover-shadow me-2">View My Subscriptions</a>
            }
            <button onclick="window.print()" class="btn btn-neon-pink neon-hover-shadow">Print Receipt</button>
        </div>
    </div>
</div>

<style>
    /* Card Neon */
    .card-neon {
        background-color: #2b2b2b;
        color: var(--light-text);
        border-radius: 12px;
        border: 1px solid var(--neon-blue);
        max-width: 800px;
        margin: 0 auto;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    /* Icon Check Styling */
    .icon-check {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .bi-check-circle-fill {
        animation: pulse 1.5s infinite;
    }

    /* Details Section */
    .confirmation-details {
        background: #1c1c1c;
        padding: 1.5rem;
        border-radius: 10px;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        padding: 0.8rem 1rem;
        border-bottom: 1px solid #444;
        font-size: 1.1rem;
    }

        .detail-item:last-child {
            border-bottom: none;
        }

    .label {
        font-weight: 600;
        color: var(--neon-blue);
    }

    .value {
        font-weight: 500;
        color: var(--neon-green);
    }

    /* Badge Neon */
    .badge-neon {
        background-color: var(--neon-green);
        color: #000;
        font-size: 1rem;
        padding: 0.4em 0.8em;
        font-weight: 600;
        border-radius: 5px;
    }

    /* Typography */
    h2.text-neon-blue {
        font-size: 2.5rem;
    }

    p.lead {
        font-size: 1.2rem;
        color: #ccc;
    }

    /* Buttons */
    .btn-neon-blue, .btn-neon-pink {
        padding: 0.7rem 1.8rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-neon-blue:hover {
            background-color: #5efcff;
            color: #000;
            box-shadow: 0 4px 10px rgba(94, 252, 255, 0.4);
        }

        .btn-neon-pink:hover {
            background-color: #ff5fa8;
            color: #fff;
            box-shadow: 0 4px 10px rgba(255, 95, 168, 0.4);
        }

    .neon-hover-shadow {
        transform: scale(1.03);
    }
</style>
