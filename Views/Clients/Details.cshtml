@model PulseFit.Management.Web.Models.ClientViewModel

@{
    ViewData["Title"] = "Client Details";
}

<div class="container mt-5">
    <h2 class="title-neon mb-4">Client Details</h2>

    <div class="card-neon p-4">
        <div class="row align-items-center mb-4">
            <div class="col-md-4 d-flex justify-content-center">
                <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle shadow-sm"
                     style="width: 180px; height: 180px; border: 3px solid var(--neon-blue);" />
            </div>
            <div class="col-md-8">
                <h3 class="text-neon-blue">@Model.FirstName @Model.LastName</h3>
                <hr class="my-3 neon-divider" />
                <dl class="row">
                    <dt class="col-sm-4 text-neon-pink">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4 text-neon-pink">Phone:</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>

                    <dt class="col-sm-4 text-neon-pink">Address:</dt>
                    <dd class="col-sm-8">@Model.Address</dd>

                    <dt class="col-sm-4 text-neon-pink">Status:</dt>
                    <dd class="col-sm-8">@Model.Status</dd>

                    <dt class="col-sm-4 text-neon-pink">Gender:</dt>
                    <dd class="col-sm-8">@Model.Gender</dd>

                    <dt class="col-sm-4 text-neon-pink">Birth Date:</dt>
                    <dd class="col-sm-8">@Model.Birthdate?.ToString("d")</dd>

                    <dt class="col-sm-4 text-neon-pink">Registration Date:</dt>
                    <dd class="col-sm-8">@Model.RegistrationDate.ToString("d")</dd>
                </dl>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-neon-blue neon-hover-shadow me-2">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-neon-pink neon-hover-shadow me-2">Delete</a>
            <a asp-action="Index" class="btn btn-neon-secondary neon-hover-shadow">Back to List</a>
        </div>
    </div>
</div>

<style>
    /* Card Styles */
    .card-neon {
        background-color: var(--light-bg);
        border: 1px solid var(--neon-pink);
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card-neon:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border-color: var(--neon-blue);
        }

    /* Divider */
    .neon-divider {
        border-top: 2px solid var(--neon-blue);
    }

    /* Details Section */
    dl.row dt {
        font-weight: 600;
        color: var(--neon-pink);
    }

    dl.row dd {
        font-weight: 400;
        color: var(--light-text);
    }

    /* Title */
    h3.text-neon-blue {
        font-size: 1.75rem;
        font-weight: bold;
    }
</style>
